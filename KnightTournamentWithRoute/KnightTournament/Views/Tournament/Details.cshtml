@using KnightTournament.ViewModels;
@model TournamentDetailsViewModel;
@{
    Guid tournamentId = ViewBag.TournamentId;
    var location = Model.Location;
}


<div>
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Scope: @Model.Scope</p>
    <p>Start Date: @Model.StartDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
    <p>Status: @Model.Status</p>
</div>

@* <a class="btn btn-outline-primary" asp-controller="Round" asp-action="Create" asp-route-tournamentId="@tournamentId">Create round</a> *@


@if (Model.Rounds != null && Model.Rounds.Count > 0)
{
    <h3>Tournament consists of @Model.Rounds.Count rounds.</h3>
    <a class="btn btn-info" asp-action="Display" asp-controller="Round" asp-route-tournamentId="@tournamentId">View</a>
}
else
{
    <p>No rounds available for this tournament.</p>
    <p><a href="@Url.Action("Create", "Round", new { tournamentId = tournamentId})" class="btn btn-outline-primary">Create</a></p>
}
<br/>

<div> 
    <h2>@location.Country</h2>
    <p>@location.City</p>
    <p> @location.Place</p>
    <img scr="@location.ImgUri" alt=""/>
</div>
