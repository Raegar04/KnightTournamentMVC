@using KnightTournament.Models.Enums;
@using KnightTournament.ViewModels.AccountViewModels;
@model RegisterViewModel

<h1 class="text-info">Register</h1>
<form asp-controller="Account" asp-action="Register" method="post">
    <h4>Create a new account</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
        </div><br />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" />
        </div><br />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input type="password" asp-for="Password" class="form-control" />
        </div><br />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div><br />
    </div>
    <div class="form-group">
        <label asp-for="User_Rank" class="col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="User_Rank" asp-items="@Html.GetEnumSelectList<Rank>()" class="form-control">
                <option disabled selected>--Select Rank--</option>
            </select>
        </div><br />
    </div>
    <div class="form-group">
        <label asp-for="User_Rating" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="User_Rating" type="number" class="form-control"/>
        </div><br />
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-success ">Register</button>
        </div><br />
    </div>
</form>