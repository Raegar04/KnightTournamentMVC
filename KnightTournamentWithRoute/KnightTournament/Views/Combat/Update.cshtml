@using KnightTournament.Models.Enums;
@using KnightTournament.ViewModels;
@model ResultsCombatPDF;

<form method="post" asp-action="Update" asp-controller="Combat">
    <div class="form-group">
        <label asp-for="Combat_StartDate"></label>
        <input asp-for="Combat_StartDate" class="form-control" placeholder="@Model.Combat_StartDate"/>
    </div>
    <div class="form-group">
        <label asp-for="Combat_EndDate"></label>
        <input asp-for="Combat_EndDate" class="form-control" placeholder="@Model.Combat_EndDate" />
    </div>
    <div class="form-group">
        <label asp-for="Combat_Type"></label>
        <select asp-for="Combat_Type" asp-items="Html.GetEnumSelectList<CombatType>()" class="form-control">
            <option value="">Select Combat Type</option>
        </select>
    </div>
    @if (Model.ErrorMessage is not null)
    {
        <p>@Model.ErrorMessage</p>
        <br>
    }
    <input asp-for="Combat_Id" type="hidden" value="@Model.Combat_Id" />
    <input asp-for="Combat_RoundId" type="hidden" value="@Model.Combat_RoundId" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
